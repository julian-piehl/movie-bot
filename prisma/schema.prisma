// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Suggestion {
    id      Int    @id @default(autoincrement())
    userId  String
    movieId Int
}

model Vote {
    id      Int    @id @default(autoincrement())
    userId  String
    movieId Int

    @@unique([userId, movieId])
}

model History {
    id        Int          @id @default(autoincrement())
    movieId   Int
    watchedAt DateTime     @default(now())
    userIds   String[]
    state     HistoryState @default(Watched)
}

enum HistoryState {
    Watched
    Canceled
    NoWatchProviderAvailable
}
